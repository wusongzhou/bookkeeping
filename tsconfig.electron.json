{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist-electron",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "incremental": true
  },
  "include": [
    "electron/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "app",
    "dist-electron"
  ]
}
